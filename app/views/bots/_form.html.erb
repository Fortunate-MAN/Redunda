<p>
  <%= form_for(bot) do |f| %>
    <% if bot.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(bot.errors.count, "error") %> prohibited this bot from being saved:</h2>

        <ul>
        <% bot.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :name %><br/>
      <%= f.text_field :name, :class => "form-control" %>
    </div><br/>

    <div class="actions">
      <%= f.submit "Save", :class => "btn btn-primary" %>
    </div>
  <% end %>
</p>

<% unless bot.new_record? %>
  <hr>
  <table class="table">
    <thead>
      <tr>
        <th colspan=2>Collaborators</th>
      </tr>
    </thead>
    <tbody>
      <% User.with_role(:collaborator, bot).each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td style="text-align:right">
            <%= link_to 'Remove', remove_collaborator_path(bot: bot.id, collaborator: user.id), :method => :delete, :data => { :confirm => "Are you sure you want to do this?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= form_tag add_collaborator_path(bot) do %>
    <div class="field">
      <%= select_tag :collaborator, options_for_select(@eligible_collaborators), { :multiple => false, :class => "form-control selectpicker", "data-live-search" => true, "data-actions-box" => true, "data-dropup-auto" => false, :title => "Add a collaborator" } %>
    </div>
    </p>

    <p>
      <div class="actions">
        <%= submit_tag "Add", :class => "btn btn-primary" %>
      </div>
    </p>
  <% end %>
<% end %>
