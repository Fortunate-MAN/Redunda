<%= form_for(bot) do |f| %>
  <% if bot.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(bot.errors.count, "error") %> prohibited this bot from being saved:</h2>

      <ul>
      <% bot.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br/>
    <%= f.text_field :name, :class => "form-control" %>
  </div><br/>
  <% unless bot.new_record? %>
    <div class="field">
      <%= f.label :collaborators %>
      <ul>
        <% User.with_role(:collaborator, bot).each do |user| %>
                <p><%= user.username %> <%= link_to 'Remove', remove_collaborator_path(bot: bot.id, collaborator: user.id), :method => :delete, :data => { :confirm => "Are you sure you want to do this?" } %></p>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Save", :class => "btn btn-primary" %>
  </div>
<% end %>

<% unless bot.new_record? %>
  <%= form_tag add_collaborator_path(bot) do %>
    <div class="field">
      <%= label_tag :collaborator, "Add Collaborator" %>
      <%= text_field_tag :collaborator, nil, placeholder: "user ID" %>
    </div>

    <div class="actions">
      <%= submit_tag "Add" %>
    </div>

  <% end %>
<% end %>
